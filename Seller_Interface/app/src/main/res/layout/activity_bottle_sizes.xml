                            >
                        </TextView>
                        <NumberPicker
                            android:id="@+id/quantityPicker4"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="250dp"
                            android:layout_marginTop="35dp"
                            >
                        </NumberPicker>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView8"
                        android:layout_width="380dp"
                        android:layout_height="110dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="25dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView13"
                        android:backgroundTint="#dae5f7"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        >
                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/plastic"
                            >
                        </ImageView>

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="35dp"
                            android:text="1500ml"
                            android:textStyle="bold"
                            android:textSize="25dp"
                            android:textColor="@color/black"
                            >
                        </TextView>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="200dp"
                            android:layout_marginTop="35dp"
                            android:text="X"
                            android:textStyle="bold"
                            android:textSize="25dp"
                            >
                        </TextView>

                        <TextView
                            android:id="@+id/quant4"
                            android:layout_width="140dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="240dp"
                            android:layout_marginTop="10dp"
                            android:text="KG"
                            android:textSize="20dp"
                            >
                        </TextView>
                        <NumberPicker
                            android:id="@+id/quantityPicker3"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="250dp"
                            android:layout_marginTop="35dp"
                            >
                        </NumberPicker>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView9"
                        android:layout_width="380dp"
                        android:layout_height="110dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="4dp"
                        app:cardCornerRadius="25dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView7"
                        android:backgroundTint="#dae5f7"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        >
                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/plastic"
                            >
                        </ImageView>

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="35dp"
                            android:text="10 Liters"
                            android:textStyle="bold"
                            android:textSize="25dp"
                            android:textColor="@color/black"
                            >
                        </TextView>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="200dp"
                            android:layout_marginTop="35dp"
                            android:text="X"
                            android:textStyle="bold"
                            android:textSize="25dp"
                            >
                        </TextView>

                        <TextView
                            android:id="@+id/quant6"
                            android:layout_width="140dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="240dp"
                            android:layout_marginTop="10dp"
                            android:text="KG"
                            android:textSize="20dp"
                            >
                        </TextView>
                        <NumberPicker
                            android:id="@+id/quantityPicker5"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="250dp"
                            android:layout_marginTop="35dp"
                            >
                        </NumberPicker>

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="380dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#dae5f7"
            app:cardCornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2">

            <TextView
                android:id="@+id/Total"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="180dp"
                android:text="Total:"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/Generate"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="106dp"
            android:layout_marginBottom="56dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="#0080A5"
            android:text="Generate Code"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView3">


        </Button>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.navigation.NavigationView

        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_header_menu"
        android:theme="@style/navigationTheme"
        android:background="@drawable/gradient"

        />

</androidx.drawerlayout.widget.DrawerLayout>