<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:fitsSystemWindows="true"
    tools:context=".CodeGenerator">




    <ImageView
        android:id="@+id/imageCode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5">

    </ImageView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="match_parent"
        android:layout_height="654dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/FiveKG"
            android:layout_width="380dp"
            android:layout_height="110dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="7dp"
            android:backgroundTint="#dae5f7"
            app:cardCornerRadius="25dp"
            app:layout_constraintBottom_toTopOf="@+id/cardView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            >

            <ImageView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:src="@drawable/plastic">

            </ImageView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="70dp"
                android:autoSizeTextType="uniform"
                android:text="Bottles"
                android:textColor="@color/black"
                >

            </TextView>

            <TextView
                android:layout_width="20dp"
                android:layout_height="55dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="40dp"
                android:text="X"
                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/Text"
                android:layout_width="100dp"
                android:layout_height="61dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="25dp"
                android:background="@color/white"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="6"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            </EditText>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="210dp"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="206dp"
            android:backgroundTint="#dae5f7"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="326dp"
                android:layout_height="178dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:text="Present your code to our nerarest kiosk or buyer."
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/locations"
                android:layout_width="318dp"
                android:layout_height="29dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="250dp"
                android:autoSizeTextType="uniform"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="See locations of our nearest Kiosk"
                android:textColor="#89c4d8"
                android:textStyle="bold">

            </TextView>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/Code"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="-10dp"
            android:background="#0080A5"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Generate Code"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:layout_constraintBottom_toTopOf="@+id/QrCode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView4">

        </Button>

        <Button
            android:id="@+id/QrCode"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="71dp"
            android:background="#0080A5"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Generate QR Code"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Code">

        </Button>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>