<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_layout"
    android:background="#b2ddd9"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="2dp"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="55dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_constraintEnd_toStartOf="@+id/imageView2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:logo="@drawable/menus" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="165dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="111dp"
                        android:text="RecylEarn"
                        android:textColor="#004080"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.427"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="244dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/toolbar"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0"
                        app:srcCompat="@drawable/logo" />

                    <ImageView
                        android:id="@+id/HomeProfile"
                        android:layout_width="75dp"
                        android:layout_height="58dp"
                        android:layout_marginStart="37dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="16dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.941"
                        app:layout_constraintStart_toEndOf="@+id/textView"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0"
                        app:srcCompat="@drawable/user" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="186dp"
                    android:layout_height="207dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="420dp"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                    app:layout_constraintEnd_toStartOf="@+id/linearLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="34dp"
                        android:layout_marginEnd="24dp"
                        android:text="Welcome"
                        android:textColor="#3f9d2f"
                        android:textSize="35dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/textView3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="86dp"
                        android:text="back,"
                        android:textColor="#3f9d2f"
                        android:textSize="35dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/textView4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="32dp"
                        android:text="username"
                        android:textColor="#54c242"
                        android:textSize="35dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView3" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="264dp"
                    android:layout_height="139dp"
                    android:layout_marginTop="61dp"
                    android:layout_marginEnd="29dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                    <androidx.cardview.widget.CardView
                        android:layout_width="231dp"
                        android:layout_height="95dp"
                        android:backgroundTint="#dae5f7"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="20dp">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Points: 60"
                            android:textColor="#66b4ce"
                            android:textSize="30dp"
                            android:textStyle="bold"

                            />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/button"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="50dp"
                            android:background="@drawable/button_shapes"
                            android:text="Redeem points"
                            android:textColor="@color/white"
                            tools:ignore="TouchTargetSizeCheck" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="44dp"
                            android:layout_height="37dp"
                            android:layout_marginLeft="147dp"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/token" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="597dp"
                    android:layout_marginTop="200dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/locView"
                        android:layout_width="197dp"
                        android:layout_height="230dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="60dp"
                        android:backgroundTint="#00b33c"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="15dp"
                        app:layout_constraintBottom_toTopOf="@+id/leaderView"
                        app:layout_constraintEnd_toStartOf="@+id/bottleView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="145dp"
                            android:text="FIND THE"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="23dp"
                            android:textStyle="bold"
                            app:autoSizeTextType="uniform" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="188dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="175dp"
                            android:text="NEAREST PLACE"
                            android:textColor="@color/white"
                            android:textSize="23dp"
                            android:textStyle="bold"
                            app:autoSizeTextType="uniform"

                            />

                        <ImageView
                            android:id="@+id/HomeMap"
                            android:layout_width="144dp"
                            android:layout_height="130dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/gmaps"></ImageView>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/bottleView"
                        android:layout_width="197dp"
                        android:layout_height="230dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="6dp"
                        android:backgroundTint="#14b8b8"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/locView"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/HomeTradeBottle"
                            android:layout_width="144dp"
                            android:layout_height="130dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/waterbottle">

                        </ImageView>

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="165dp"
                            android:text="TRADE BOTTLE"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="23dp"
                            android:textStyle="bold"
                            app:autoSizeTextType="uniform" />
                    </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:id="@+id/faqView"
                        android:layout_width="197dp"
                        android:layout_height="230dp"
                        android:layout_marginStart="-10dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginBottom="53dp"
                        android:backgroundTint="#ffcccc"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/leaderView"
                        app:layout_constraintTop_toBottomOf="@+id/bottleView">

                        <ImageView
                            android:id="@+id/HomeFAQ"
                            android:layout_width="144dp"
                            android:layout_height="130dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/faq">
                        </ImageView>


                        <TextView
                            android:id="@+id/imageView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="75dp"
                            android:layout_marginTop="145dp"
                            android:text="FAQ"
                            android:textColor="	#666666"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/leaderView"
                        android:layout_width="197dp"
                        android:layout_height="230dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginEnd="17dp"
                        android:backgroundTint="#f7f7ba"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="15dp"
                        app:layout_constraintEnd_toStartOf="@+id/faqView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/locView">

                        <ImageView
                            android:id="@+id/HomeLeaderBoards"
                            android:layout_width="144dp"
                            android:layout_height="130dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/leaderboard">

                        </ImageView>

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="160dp"
                            android:text="LEADERBOARDS"
                            android:textColor="@color/black"
                            android:textSize="23dp"
                            app:autoSizeTextType="uniform"
                            android:textAlignment="center"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView

        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_header_menu"
        android:theme="@style/navigationTheme"
        app:itemBackground="@drawable/gradient"
        />



</androidx.drawerlayout.widget.DrawerLayout>